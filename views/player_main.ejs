        sportCard.innerHTML = `
          <img src="${sport.image_url}" alt="${sport.name}">
          <div class="sport-info">
            <h3>${sport.name}</h3>
            <button class="create-button" onclick="createSport()">Schedule</button>
          </div>
        `;
        sportsContainer.appendChild(sportCard);
