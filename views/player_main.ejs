  <style>
    body {
      font-family: 'Montserrat', sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      background: linear-gradient(to right, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('https://media.istockphoto.com/id/469551258/photo/silhouettes-of-hockey-fans-at-a-hockey-game.jpg?s=612x612&w=0&k=20&c=TqHldoOIM3voP38T2qUup0CR0ncQDlgPlr4GHy1pv9E=');
      min-height: 100vh;
      box-sizing: border-box;
      position: relative;
      background-size: cover;
      background-position: center;
    }

    .nav {
      background-color: rgba(51, 51, 51, 0.8);
      color: #fff;
      padding: 15px;
      display: flex;
      justify-content: space-between;
      width: 100%;
      box-sizing: border-box;
      position: relative;
      z-index: 1;
    }

    .logo {
      font-size: 1.5em;
      font-weight: bold;
      text-decoration: none;
      color: #fff;
    }

    .elements {
      display: flex;
      gap: 20px;
    }

    .elements a {
      color: #fff;
      text-decoration: none;
      padding: 10px 20px;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .elements a:hover {
      background-color: rgba(85, 85, 85, 0.8);
    }

    .section {
      text-align: center;
      color: #333;
      margin: 20px;
      position: relative;
      z-index: 1;
    }
    .section-heading {
       color: #fff; 
       text-align: center; 
       margin-top: 20px; 
}

    .sports-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .sport-card {
      background: rgba(255, 255, 255, 0.3);
      border-radius: 15px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
      margin: 20px;
      overflow: hidden;
      height: 280px;
      padding: 5px;
      transition: transform 0.3s ease-in-out;
      width: 250px;
      display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
    }

    .sport-card:hover {
      transform: scale(1.05);
    }

    .sport-card img {
      border-radius: 15px 15px 0 0;
      object-fit: cover;
      width: 100%;
      height: 85%;
      transition: filter 0.3s ease-in-out;
    }

    .sport-card img:hover {
      filter: brightness(80%);
    }

    .sport-card .sport-info {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 10px;
      height: 30%;
      width: 100%;
    }

    .sport-card .sport-info h3 {
      margin: 0;
    }

    .create-button {
      margin-top: auto;
      margin-left: 65px; /* Push the button to the bottom */
      background-color: black; /* Changed color */
      color: white;
      border: none;
      border-radius: 6px;
      padding: 2px 2px;
      cursor: pointer;
      width: 40%;
    }

    .custom-alert {
  position: fixed;
  top: 0;
  left: 0;
  width: 20%;
  margin-left: 38%;
  background-color: white; /* Red background color with transparency */
  color: black;
  padding: 20px;
  border-radius: 30px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5); /* Add shadow for depth */
  z-index: 9999;
  display: none;
}

.custom-alert-message {
  margin-bottom: 10px;
  text-align: center; /* Center-align the message */
}

.custom-alert-buttons {
  display: flex;
  justify-content: center;
}

.custom-alert-button {
  margin: 0 10px;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.custom-alert-button.ok {
  background-color: #4caf50;
  color: white;
}

.custom-alert-button.cancel {
  background-color: #f44336;
  color: white;
}

  </style>
</head>
<body>
  <div class="nav">
    <a href="/home" class="logo"></a>
    <div class="elements">
      <a href="/player_main">Home</a>
      <a href="/events">Events</a>
      <a href="/my_events">My events</a>
      <a href="/logout">logout</a>
    </div>
  </div>
  
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <!-- Custom alert box -->
  <div class="custom-alert" id="customAlert">
    <div class="custom-alert-message">Change Password.</div>
    <div class="custom-alert-buttons">
      <button class="custom-alert-button ok" onclick="redirectToChangePassword()">OK</button>
      <button class="custom-alert-button cancel" onclick="dismissCustomAlert()">Cancel</button>
    </div>
  </div>
  <h2 class="section-heading">Available Sports</h2>

  <div class="section">
    <div class="sports-container" id="sportsContainer"></div>
  </div>

