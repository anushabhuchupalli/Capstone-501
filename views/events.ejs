<!DOCTYPE html>
<html lang="en">
<meta name="_csrf" content="<%= csrfToken %>">

<head>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: lavenderblush;
      margin: 0;
      padding: 0;
    }

    .events-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      padding: 30px; /* Added padding for spacing */
      width: 900px;
      margin: 30px;
    }

    .event-card {
  flex-grow: 1; /* Allow the card to grow and occupy available space */
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 8px;
  padding: 5px;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  margin-right: 20px; /* Added margin right for spacing between cards */
  margin-bottom: 20px; /* Added margin bottom for spacing between rows */
  width: calc((100% - 140px) / 3); /* Adjusted width calculation */
}



    .event-card:hover {
      transform: translateY(-5px);
    }

    .event-card img {
      width: 100%;
      height: auto;
      max-height: 150px;
      object-fit: cover;
    }

    .event-details {
      padding: 15px;
    }

    h3 {
      margin: 0 0 10px;
      color: #333;
    }

    p {
      margin: 0 0 8px;
      color: #666;
    }

    button {
      background-color: #3498db;
      color: #fff;
      border: none;
      padding: 8px 15px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #2980b9;
    }
  </style>
</head>

<body>
  <div class="events-container" id="eventsContainer">
    <% events.forEach(event => { %>
      <div class="event-card">
        <img src="<%= event.teamLogo %>" alt="Team Logo">
        <div class="event-details">
          <h3><%= event.teamname %> - <%= event.eventName %></h3>
          <p>Date: <%= new Date(event.date).toLocaleString() %></p>
          <p>Venue: <%= event.venue %></p>
          
          <!-- Include a simple join button without functionality -->
          <% if (new Date(event.date) < new Date()) { %>
            <button class="completed-button" disabled>Completed</button>
          <% } else { %>
            <button class="join-button" data-event-id="<%= event.id %>" data-csrf-token="<%= csrfToken %>">
              Join
            </button>
          <% } %>
          <button class="viewPlayersBtn" data-event-id="<%= event.id %>">View Players</button>

        </div>
      </div>
    <% }); %>
  </div>
  <script>
    document.addEventListener('click', async (event) => {
      const joinButton = event.target.closest('.join-button');
  
      if (joinButton) {
        const eventId = joinButton.dataset.eventId;
        const csrfToken = joinButton.dataset.csrfToken;
        
        try {
          const response = await fetch('/join_event', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'CSRF-Token': csrfToken,
            },
            body: JSON.stringify({ eventId }),
          });
          const data = await response.json();
  
          if (data.success) {
            console.log('Player joined event successfully');
  
            // Display an alert message
            alert('You have successfully joined the event!');
  
            // Redirect to the event page (modify the URL accordingly)
            window.location.href = `/event/${eventId}`;
  
          } else {
            console.error('Error joining event:', data.error);
          }
        } catch (error) {
          console.error('Error joining event:', error);
        }
      }
    });
    document.querySelectorAll('.viewPlayersBtn').forEach(button => {
      button.addEventListener('click', function() {
        const eventId = this.getAttribute('data-event-id');
        window.location.href = `/view_players/${eventId}`;
      });
    });
  </script>
</body>

</html>
